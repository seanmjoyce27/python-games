# Copy this file to .env and customize
# For local development:
#   cp .env.example .env

# Flask secret key (generate a random one for production)
# To generate: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this

# Environment: development or production
FLASK_ENV=development

# Database URL (optional - defaults to absolute path in app.py)
# DATABASE_URL=sqlite:///instance/python_games.db

# Port to run on
PORT=8443
# Set to 'true' to wipe and recreate the database on startup (use with caution!)
REINT_DB=false
# Password for the /admin dashboard (change this!)
ADMIN_PASSWORD=admin123

run = "python3 app.py"
modules = ["python-3.11", "web", "nodejs-20", "bash"]

[nix]
channel = "stable-25_05"

[env]
REINT_DB = "false"

[deployment]
run = ["sh", "-c", "gunicorn -b 0.0.0.0:$PORT app:app -c gunicorn.conf.py"]
healthcheckPath = "/healthz"

[[ports]]
localPort = 443
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8443
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

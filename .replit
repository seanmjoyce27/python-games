run = "python3 app.py"
modules = ["python-3.11", "web", "nodejs-20", "bash"]

[nix]
channel = "stable-25_05"

[env]
REINT_DB = "false"

[deployment]
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--config", "gunicorn.conf.py", "app:app"]
healthcheckPath = "/healthz"
deploymentTarget = "autoscale"

[[ports]]
localPort = 443
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8443
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
